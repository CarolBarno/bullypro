<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/user_icon"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/ic_mood"
        android:visibility="visible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_messenger_textview"
        android:layout_toStartOf="@+id/user_icon2"
        android:layout_toEndOf="@+id/user_icon"
        android:background="@drawable/messenger_border_green"
        android:padding="4dp"
        android:text=""
        android:textColor="@color/colorWhite"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_timestamp_textview"
        android:layout_below="@+id/chat_messenger_textview"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="16dp"
        android:padding="4dp"
        android:text="1 min ago"
        android:textColor="@color/colorBlack"
        android:textSize="12sp"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/user_icon2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/ic_person"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_user_textview"
        android:layout_marginStart="24dp"
        android:layout_below="@id/chat_messenger_textview"
        android:layout_alignParentStart="true"
        android:padding="4dp"
        android:text="1 min ago"
        android:textSize="12sp"
        android:textColor="@color/colorBlack"/>

</RelativeLayout>